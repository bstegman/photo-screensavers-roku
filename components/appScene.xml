<?xml version = "1.0" encoding = "utf-8" ?>
<component name="AppScene" extends="Scene">

	<interface>

		<!--
            Roku requires support for handling deep link requests without
            re-launching the app.  This method is called from main.brs when
            a deeplink request is received via the input event.
        -->
        <function name="deepLinkRequestReceived" />
	</interface>

	<children>

		<Router id="router" />
		<ApiRequestManager id="ApiRequestManager" />
		<RegistryManager id="RegistryManager" />
        <UserManager id="UserManager" />
        <AdsManager id="AdsManager" />
        <SessionManager id="SessionManager" />

        <BusySpinner
		  	id="Spinner"
		  	visible="false" />
	</children>

    <script type="text/brightscript" uri="appScene.brs" />
    <script type="text/brightscript" uri="pkg:/source/reg/runtime.brs" />
    <script type="text/brightscript" uri="pkg:/source/steg/api/newRelic.brs" />
	<script type="text/brightscript" uri="pkg:/source/steg/api/utils.brs" />
    <script type="text/brightscript" uri="pkg:/source/steg/registry.brs" />
	<script type="text/brightscript" uri="pkg:/source/steg/type.brs" />
	<script type="text/brightscript" uri="pkg:/source/steg/ui.brs" />
    <script type="text/brightscript" uri="pkg:/source/utils/fonts.brs" />
</component>
