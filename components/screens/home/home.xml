<?xml version="1.0" encoding="utf-8" ?>
<component name="HomeScreen" extends="BaseScreen">

    <children>

        <Poster
            id="bakImage"
            opacity="0.35" />

        <Rectangle
            id="messageContainer"
            color="#000000"
            visible="false">

            <Label
                id="messageLabel"
                horizAlign="center"
                vertAlign="center"
                color="#FFFFFF"
                font="font:SmallestSystemFont" />
        </Rectangle>

        <PosterGrid 
            id="menu"
            vertFocusAnimationStyle="floatingFocus"
            numRows="2"
            numColumns="2"
            basePosterSize="[400, 227]"
            itemSize="[400, 227]"
            itemSpacing="[40, 40]"
            caption1NumLines="1" />

        <Poster
            id="logo"
            uri="pkg:/assets/images/logo.png"
            width="400"
            height="35" />
    </children>

    <script type="text/brightscript" uri="home.brs" />
    <script type="text/brightscript" uri="pkg:/source/steg/dateTime.brs" />
    <script type="text/brightscript" uri="pkg:/source/steg/device.brs" />
</component>