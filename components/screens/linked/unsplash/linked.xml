<?xml version = "1.0" encoding = "utf-8" ?>
<component name="LinkedUnsplashScreen" extends="BaseScreen">

    <children>

        <!-- link -->
        <Group
            id="linkContainer"
            visible="false">
        
            <LabelBase
                id="linkLabel"
                horizAlign="center"
                width="1200"
                wrap="true"
                font="font:MediumSystemFont" />

            <ButtonsStandard 
                id="linkButtons"
                orientation="vertical"
                rowSpacings="[60, 10]"
                rowHeights="[75]" />
        </Group>

        <!-- linked -->
        <Group
            id="linkedContainer"
            visible="false">
        
            <ButtonsStandard 
                id="linkedButtons"
                orientation="vertical"
                rowSpacings="[75, 10]"
                rowHeights="[75]" />

            <Label
                id="proTip"
                font="font:MediumSystemFont" />
        </Group>
    </children>

    <script type="text/brightscript" uri="linked.brs" />
    <script type="text/brightscript" uri="pkg:/source/api/integrations/unsplash.brs" />
    <script type="text/brightscript" uri="pkg:/source/reg/unsplash.brs" />
    <script type="text/brightscript" uri="pkg:/source/steg/enums/api.brs" />
</component>
