<?xml version = "1.0" encoding = "utf-8" ?>
<component name="VideosScreen" extends="BaseScreen">

    <children>

        <AvenirBlackLabel
            id="title"
            size="50" />

        <PosterGrid 
            id="grid"
            numRows="3"
            numColumns="4"
            basePosterSize="[350, 196]"
            itemSize="[350, 196]"
            itemSpacing="[40, 40]"
            caption1NumLines="1" />

        <Video
			id="videoPlayer"
			enableUI="true"
            notificationinterval="1"
			enableTrickPlay="true"
			disableScreenSaver="true"
			loop="true"
            mute="false"
            visible="false" />

        <Timer
            id="componentTimer"
            repeat="false" />
    </children>

    <script type="text/brightscript" uri="videos.brs" />
    <script type="text/brightscript" uri="pkg:/source/api/videos.brs" />
</component>
