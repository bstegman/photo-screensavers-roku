<?xml version="1.0" encoding="utf-8" ?>
<component name="AddOnsClockScreen" extends="BaseScreen">

    <children>

        <AvenirBlackLabel
            id="title"
            size="50" />

        <!-- settings -->
        <LayoutGroup
            id="settingsContainer"
            layoutDirection="vert"
            itemSpacings="[20]">

            <Label
                id="clockLabel"
                font="font:MediumSystemFont" />

            <CheckList
                id="clockChecklist"
                vertFocusAnimationStyle="floatingFocus">

                <ContentNode role="content">
                    <ContentNode id="clockEnabled" />
                    <ContentNode id="clockShowDate" />
                </ContentNode>
            </CheckList>
        </LayoutGroup>

        <!-- style -->
        <LayoutGroup
            id="stylesContainer"
            layoutDirection="vert"
            itemSpacings="[20]">

            <Label 
                id="styleLabel"
                font="font:MediumSystemFont" />

            <MarkupList
                id="styles"
                itemComponentName="ListItem"
                vertFocusAnimationStyle="fixedFocus"
                numRows="4" />
        </LayoutGroup>

        <!-- clock -->
        <ClockText 
            id="clock" />
    </children>

    <script type="text/brightscript" uri="clock.brs" />
    <script type="text/brightscript" uri="pkg:/source/reg/clock.brs" />
</component>
