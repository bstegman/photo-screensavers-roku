<?xml version = "1.0" encoding = "utf-8" ?>
<component name="HalloweenComponent" extends="Group">

    <interface>

        <function name="create" />
    </interface>

    <children>

        <Poster
            id="background"
            uri="pkg:/assets/widgets/halloween/background.jpg" />

        <Poster
            id="spider"
            width="128"
            height="400"
            translation="[100,-400]"
            uri="pkg:/assets/widgets/halloween/spider.png" />

        <Group id="container" />

        <!-- spider -->
        <Animation 
            id="spiderAnimation"
            duration="3"
            repeat="false"
            easeFunction="linear">
            <Vector2DFieldInterpolator 
                id="spiderInterp"
                key="[0.0, 1.0]"
                fieldToInterp="spider.translation" />
        </Animation>

        <!-- mask -->
        <Animation 
            id="maskAnimation"
            duration="3"
            repeat="false"
            easeFunction="linear">
            <Vector2DFieldInterpolator 
                id="spiderInterp"
                key="[0.0, 1.0]"
                fieldToInterp="spider.translation" />
        </Animation>

        <!-- items -->
        <ParallelAnimation 
            id="pAnimation"
            repeat="false">
            
            <Animation
                id="animation1"
                duration="60"
                repeat="false"
                easeFunction="linear">
                <Vector2DFieldInterpolator
                    id="inter1"
                    key="[0.0, 1.0]" />
            </Animation>
            <Animation
                id="animation2"
                duration="60"
                repeat="false"
                easeFunction="linear">
                <Vector2DFieldInterpolator
                    id="inter2"
                    key="[0.0, 1.0]" />
            </Animation>
            <Animation
                id="animation3"
                duration="60"
                repeat="false"
                easeFunction="linear">
                <Vector2DFieldInterpolator
                    id="inter3"
                    key="[0.0, 1.0]" />
            </Animation>
            <Animation
                id="animation4"
                duration="60"
                repeat="false"
                easeFunction="linear">
                <Vector2DFieldInterpolator
                    id="inter4"
                    key="[0.0, 1.0]" />
            </Animation>
        </ParallelAnimation>
    
        <Timer
            id="spiderTimer"
            repeat="false"
            duration="5" />
    </children>

    <script type="text/brightscript" uri="component.brs" />
    <script type="text/brightscript" uri="pkg:/source/steg/math.brs" />
    <script type="text/brightscript" uri="pkg:/source/steg/ui.brs" />
</component>
