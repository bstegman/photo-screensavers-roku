<?xml version = "1.0" encoding = "utf-8" ?>
<component name="WidgetPongScreen" extends="WidgetBaseScreen">

    <children>

        <Rectangle
            id="lineTop"
            color="#d3d3d3"
            height="40" />

        <Rectangle
            id="lineBottom"
            color="#d3d3d3"
            height="40" />

        <Rectangle
            id="paddleLeft"
            width="25"
            height="100"
            color="#FFFFFF"
            translation="[60, 310]" />

        <Rectangle
            id="paddleRight"
            width="25"
            height="100"
            color="#FFFFFF"
            translation="[1840, 310]" />

        <Rectangle
            id="ball"
            width="20"
            height="20"
            color="#FFFFFF" />

        <Animation
            id="animationPaddle"
            repeat="false"
            duration="1"
            easeFunction="linear">
            <Vector2DFieldInterpolator
                id="interpPaddle"
                key="[0.0, 1.0]" />
        </Animation>

        <Animation
            id="animationBall"
            repeat="false"
            duration="2"
            easeFunction="linear">
            <Vector2DFieldInterpolator
                id="interpBall"
                key="[0.0, 1.0]"
                fieldToInterp="ball.translation" />
        </Animation>
    </children>

    <script type="text/brightscript" uri="widget.brs" />
    <script type="text/brightscript" uri="pkg:/source/steg/math.brs" />
</component>
