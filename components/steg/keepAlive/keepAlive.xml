<?xml version="1.0" encoding="utf-8" ?>
<component name="keepAlive" extends="Group">

	<interface>
		<!-- 
			Starts the keep alive component
				params
					aliveType - possible values are launch and video

		-->
		<function name="start" />

		<!--
			stops the keep alive
		-->
		<function name="stopKeepAlive" />
	</interface>

	<children>

		<Video 
			id="videoPlayer"
			visible="false"
			disableScreenSaver="true" />

		<Timer id="timer" />
	</children>

  	<script type="text/brightscript" uri="keepAlive.brs" />
	<script type="text/brightscript" uri="pkg:/source/steg/api/utils.brs" />
	<script type="text/brightscript" uri="pkg:/source/steg/type.brs" />
</component>
