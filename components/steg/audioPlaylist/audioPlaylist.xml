<?xml version="1.0" encoding="utf-8" ?>
<component name="AudioPlaylist" extends="Group">

	<interface>
		<field id="content" type="node" onChange="onContentChange" />
		<field id="control" type="string" onChange="onControlChanged" />
		<field id="currentSong" type="node" />
		<field id="loop" type="boolean" value="false" />
		<field id="position" type="integer" alias="audio.position" />
		<field id="signUrls" type="boolean" value="false" />

		<function name="isPlaying" />
		<function name="nextSong" />
		<function name="playSignedUrl" />
		<function name="previousSong" />
	</interface>

    <children>

	    <Video 
			id="audio"
			visible="false"
			disableScreenSaver="true" />
	</children>

    <script type="text/brightscript" uri="audioPlaylist.brs" />
	<script type="text/brightscript" uri="pkg:/source/steg/type.brs" />
</component>
