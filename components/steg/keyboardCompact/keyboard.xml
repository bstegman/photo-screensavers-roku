<?xml version="1.0" encoding="utf-8" ?>
<component name="KeyboardCompact" extends="Group">

    <interface>
        <field id="inputText" type="string" />
        <field id="type" type="string" value="numeric" />
        <field id="keypressed" type="string" />

        <function name="isFocused" />
        <function name="clearInput" />
    </interface>

    <children>

        <Rectangle
            color="#FFFFFF"
            opacity="0.75"
            width="500"
            height="40">

            <Label
                id="itemTextInput"
                color="#000000"
                translation="[10, 10]"
                inheritParentOpacity="false" />
        </Rectangle>

        <MarkupGrid
			id="keyGrid"
			itemComponentName="KeyboardItem"
			numRows="1"
            numColumns="13"
            columnWidths="[25, 25]"
            itemSize="[30, 30]" 
            itemSpacing="[10, 0]"
			drawFocusFeedback="false"
            translation="[0, 50]" />
    </children>

    <script type="text/brightscript" uri="keyboard.brs" />
    <script type="text/brightscript" uri="pkg:/source/steg/type.brs" />
</component>