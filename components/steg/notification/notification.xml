<?xml version="1.0" encoding="utf-8" ?>
<component name="Notification" extends="Rectangle">

	<interface>
		<field id="message" type="string" alwaysNotify="true" onChange="onMessageSet" />
		<field id="type" type="string" value="error" />
		<field id="timeout" type="integer" value="3" />
		<field id="containerHeight" type="integer" value="100" onChange="onContainerHeight" />
	</interface>

	<children>

        <Label
            id="labelMessage"
            horizAlign="center"
            vertAlign="center"
			wrap="true"
            font="font:SmallestSystemFont" />

		<Timer
			id="timer"
			repeat="false" />
	</children>

	<script type="text/brightscript" uri="notification.brs" />
	<script type="text/brightscript" uri="pkg:/source/steg/ui.brs" />
</component>
