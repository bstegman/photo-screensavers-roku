<?xml version="1.0" encoding="utf-8" ?>
<component name="ClockText" extends="Group">

	<interface>
		<field id="config" type="node" onChange="onConfig" />
	</interface>

	<children>

		<Label 
			id="line1" />

		<Label
			id="line2"
			visible="false" />

        <Timer
			id="timer"
			duration="60"
			repeat="true" />
	</children>

  	<script type="text/brightscript" uri="text.brs" />
  	<script type="text/brightscript" uri="pkg:/source/steg/dateTime.brs" />
  	<script type="text/brightscript" uri="pkg:/source/steg/ui.brs" />
  	<script type="text/brightscript" uri="pkg:/source/steg/type.brs" />
</component>
