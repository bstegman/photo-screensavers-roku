<?xml version="1.0" encoding="utf-8" ?>

<component name="ButtonStandardComponent" extends="Group">

    <interface>
        <field id="itemContent" type="node" onChange="itemContentChanged" />
        <field id="width" type="float" onChange="onWidthChanged" />
        <field id="height" type="float" onChange="onHeightChanged" />
        <field id="focusPercent" type="float" onChange="itemPercentChanged" />
        <field id="gridHasFocus" type="boolean" onChange="onGridHasFocus" />
    </interface>

    <children>

        <Rectangle id="bak" />

        <Label 
            id="itemText"
            font="font:SmallSystemFont"
            horizAlign="center"
            vertAlign="center" />
        
        <Poster
            id="icon"
            width="39"
            height="29"
            loadDisplayMode="scaleToFit"
            visible="false" />
    </children>

    <script type="text/brightscript" uri="standardComponent.brs" />
    <script type="text/brightscript" uri="pkg:/source/steg/type.brs" />
    <script type="text/brightscript" uri="pkg:/source/steg/locale.brs" />
</component>
