<?xml version="1.0" encoding="utf-8" ?>
<component name="ButtonsStandard" extends="MarkupGrid">

    <interface>
        <!--
            Determines the button layout
                Supported Values: horizontal and vertical
        -->
        <field id="orientation" type="string" value="vertical" />

        <!--
            Component styling
            
            values:{
                textFocusedColor:String
                textUnFocusedColor:String
                buttonFocusedColor:String
                buttonUnFocusedColor:String
            }
        -->
        <field id="style" type="assocarray" />

        <!--
            Convenience method for generating buttons
        -->
        <function name="create" />
    </interface>

    <script type="text/brightscript" uri="standard.brs" />
</component>