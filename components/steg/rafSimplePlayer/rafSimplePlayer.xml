<?xml version = "1.0" encoding = "utf-8" ?>
<component name="RAFSimplePlayer" extends="Task">

	<interface>
		<!--
			See RAFSimplePlayerNode for properties
		-->
		<field id="adSettings" type="node" />
		
		<!--
			Set when an ad play was successful
		-->
		<field id="adPlaySuccessful" type="boolean" alwaysNotify="true" />

		<!--
			set after getAds() is called
		-->
		<field id="adCount" type="integer" alwaysNotify="true" />

		<!--
			enable/disable RAF debug output
		-->
		<field id="debug" type="boolean" value="false" />

		<!-- 
			flag indicating if the user is allowed to exit the ad
		-->
		<field id="allowExit" type="boolean" value="false" />
	</interface>

	<script type="text/brightscript" uri="rafSimplePlayer.brs" />
</component>
