<?xml version="1.0" encoding="utf-8" ?>
<component name="TextItem" extends="Group">
 
    <interface>
        <field id="itemContent" type="node" onChange="onContentChanged" />
        <field id="focusPercent" type="float" onChange="onPercentChanged" />
        <field id="gridHasFocus" type="boolean" onChange="onFocusChange" />
    </interface>

    <children>

        <Label 
            id="itemText"
            color="#FFFFFF" />
    </children>

    <script type="text/brightscript" uri="textItem.brs" />
</component>
