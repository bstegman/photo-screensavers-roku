<?xml version="1.0" encoding="utf-8" ?>
<component name="SessionManager" extends="Group">

    <interface>
        <!--
            flag for showing animations or not
        -->
        <field id="animation" type="string" value="none" />

        <!--
            the music genre selected
        -->
        <field id="musicGenre" type="node" />

        <!--
            the sound selected
        -->
        <field id="sound" type="node" />

        <!--
			standard component timeout

				- basic subscribed:
					7200 = 2 hours
				- free with no ads:
					60 = 1 minute
				- free wtih ads:
					14400 = 4 hours
		-->
        <field id="timeout" type="integer" />

        <function name="clearAll" />
        <function name="clearMusic" />
        <function name="clearSound" />
    </interface>

    <script type="text/brightscript" uri="sessionManager.brs" />
    <script type="text/brightscript" uri="pkg:/source/steg/locale.brs" />
</component>